{
  "name": "UG2 Solfege",
  "description": "Transposes All Chords on ultimate-guitar to Solfege.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://tabs.ultimate-guitar.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "Guitar-icon48.png",
    "128": "Guitar-icon128.png"
  }
}
